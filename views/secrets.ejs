<%- include('partials/header') %>

<head>
    <style>
        body {
            background-color: #E8ECEF; /* Light grey background */
            margin: 0; /* Remove default margin */
            font-family: Arial, sans-serif; /* Optional: Add a clean font */
            height: 100vh; /* Ensure the body spans the full viewport */
            display: flex; /* Use flexbox to center content */
            justify-content: center; /* Center content horizontally */
            align-items: center; /* Center content vertically */
        }

        .secret-text {
            text-align: center; /* Center align text */
            font-size: 2rem; /* Increase text size for visibility */
            color: #fff; /* White text for better contrast */
            background-color: #000; /* Black background for emphasis */
            padding: 20px 40px; /* Add padding for better spacing */
            border-radius: 15px; /* Rounded corners for a modern look */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            max-width: 100%; /* Ensure content doesn't overflow */
        }

        .centered {
            display: flex; /* Flexbox layout */
            flex-direction: column; /* Stack items vertically */
            justify-content: center; /* Center content vertically */
            align-items: center; /* Center content horizontally */
            text-align: center; /* Center-align text */
            gap: 20px; /* Add space between items */
        }

        .jumbotron {
            background: none; /* Remove default background */
            margin: 0;
        }

        .container {
            text-align: center; /* Center text */
        }

        .display-3 {
            font-size: 3rem; /* Adjust heading size */
            font-weight:100;
        }
        hr {
            border: 1px solid #000; /* Black border */
            width: 100%; /* Set the width to 80% of the container */
            margin-top: 0px; /* Center the line horizontally and give margin */
        }
    </style>
</head>

<div class="jumbotron centered">
    <div>
        <i class="fas fa-key fa-6x" style="margin-bottom: 20px;"></i>
    </div>
    <h1 class="display-3">Welcome to the Secrets Page</h1>
    <!-- <p class="lead">Here you can share your secrets anonymously.</p> -->
    <hr>

    <div class="btn-group">
        <!-- Logout button -->
        <a href="/logout" class="btn btn-light">Logout</a>

        <!-- Submit button to show the secret submission form -->
        <button id="showFormButton" class="btn btn-dark">Submit a Secret</button>
    </div>

    <!-- Secret submission form (hidden by default) -->
    <div id="secretForm" style="display: none; margin-top: 30px;">
        <form action="/submit" method="POST">
            <div class="form-group">
                <input
                    type="text"
                    class="form-control text-center"
                    name="secret"
                    placeholder="What's your secret?"
                    required
                />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    // JavaScript to toggle the display of the secret submission form
    document.getElementById("showFormButton").addEventListener("click", function () {
        const secretForm = document.getElementById("secretForm");
        if (secretForm.style.display === "none") {
            secretForm.style.display = "block"; // Show the form
        } else {
            secretForm.style.display = "none"; // Hide the form
        }
    });
</script>

<%- include('partials/footer') %>
